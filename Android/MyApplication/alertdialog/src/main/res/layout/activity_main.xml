<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    android:background="@drawable/bg"
    tools:context="com.hqf.alertdialog.MainActivity">

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="#38cfd1"
        android:onClick="alertDialogOne"
        android:text="@string/button1"
        android:textColor="@color/word"
        android:textSize="@dimen/textSize" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="#3961b7"
        android:onClick="alertDialogTwo"
        android:text="@string/button2"
        android:textColor="@color/word"
        android:textSize="@dimen/textSize" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="#43b243"
        android:onClick="alertDialogThree"
        android:text="@string/button3"
        android:textColor="@color/word"
        android:textSize="@dimen/textSize" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f9671e"
        android:onClick="alertDialogFour"
        android:text="@string/button4"
        android:textColor="@color/word"
        android:textSize="@dimen/textSize" />


</LinearLayout>
